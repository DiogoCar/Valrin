package exercicio_fix;

import javax.swing.JOptionPane;
/**
 *
 * @author Discente
 */
public class Valrin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here

    
    double pp,pb,t,porc,porc2;
        int,p,b;
        String np,nb;
   
        
        np=JOptionPane.showInputDialog(null, "Digite a base: ");
        nb=JOptionPane.showInputDialog(null, "Digite a altura: ");
       
        
        p = Integer.parseInt(np);
        b = Integer.parseInt(nb);
        
      pp= 0.20*p;
      pb= 1.50*b;
      t= pp+pb;
      porc= 10*t/100;
      porc2= t-porc;
       
      JOptionPane.showMessageDialog(null, "Pães: " + p + "\n"+
"Broas: " + b + "\n"+
"Total: " + t + "\n"+
"Poupança: " + porc2 );
       
    }
}
